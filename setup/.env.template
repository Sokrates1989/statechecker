# --- Docker Image Configuration ---
IMAGE_NAME=sokrates1989/statechecker
IMAGE_VERSION=latest

# --- Database Configuration ---
DB_HOST=db
DB_PORT=3306
DB_NAME=state_checker
DB_USER=state_checker
DB_PASSWORD=change_me_db_password
DB_ROOT_PASSWORD=change_me_root_password

# --- API Configuration ---
REST_API_PORT=8787
SERVER_AUTHENTICATION_TOKEN=change_me_random_auth_token

# --- Logging ---
TIMEZONE=Europe/Berlin

# --- Check Frequency ---
CHECK_WEBSITES_EVERY_X_MINUTES=30
CHECK_GOOGLEDRIVE_EVERY_X_MINUTES=60

# --- Messaging ---
STATUS_MESSAGES_TIME_OFFSET_PERCENTAGE=2.5

# --- Email Notifications ---
EMAIL_ENABLED=false
EMAIL_SENDER_USER=some.mail@domain.com
EMAIL_SENDER_PASSWORD=
